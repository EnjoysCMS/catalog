{
    "name": "enjoyscms/catalog",
    "description": "Module Catalog for EnjoysCMS",
    "type": "enjoyscms-module",
    "require": {
        "php": "^8.1",
        "ext-intl": "*",
        "enjoyscms/core": "^6.0@dev",
        "enjoyscms/admin": "^6.0@dev",
        "enjoyscms/sitemap": "^6.0@dev",
        "enjoyscms/elfinder": "^6.0@dev",
        "psr/event-dispatcher": "^1.0",
        "gedmo/doctrine-extensions": "^3.0",
        "jbroadway/urlify": "^1.2",
        "intervention/image": "^2.5",
        "enjoys/upload": "^3.0",
        "myclabs/deep-copy": "^1.10",
        "beberlei/doctrineextensions": "^1.3",
        "enjoys/forms": ">= 5.4.2",
        "enjoys/cartesian-iterator": "dev-master",
        "symfony/property-access": "^6.0",
        "symfony/serializer": "^6.0",
        "guzzlehttp/guzzle": "^7.7"
    },
    "autoload": {
        "psr-4": {
            "EnjoysCMS\\Module\\Catalog\\": "src/",
            "EnjoysCMS\\Module\\Catalog\\Install\\": "install/"
        }
    },
    "extra": {
        "module-name": "Каталог",
        "admin-links": {
            "@catalog_category_list": "Категории",
            "@catalog_product_list": "Продукты",
            "@catalog_filters": "Фильтры (настройка)",
            "@catalog_pricegroup_list": "Группы цен",
            "@catalog_currency_list": "Валюты",
            "catalog/admin/setting": "Настройки"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "EnjoysCMS\\Module\\Catalog\\Install\\Composer::assetsInstall",
            "EnjoysCMS\\Module\\Catalog\\Install\\Composer::registerCommands"
        ],
        "post-update-cmd": [
            "EnjoysCMS\\Module\\Catalog\\Install\\Composer::assetsInstall",
            "EnjoysCMS\\Module\\Catalog\\Install\\Composer::registerCommands"
        ],
        "post-package-uninstall": [
            "EnjoysCMS\\Module\\Catalog\\Install\\Composer::unregisterCommands"
        ]
    },
    "require-dev": {
        "vimeo/psalm": "^4.20 | ^5.9"
    },
    "config": {
        "allow-plugins": {
            "composer/installers": true,
            "oomphinc/composer-installers-extender": true
        }
    }
}
