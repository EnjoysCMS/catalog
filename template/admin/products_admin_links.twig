<div class="text-nowrap">
    {% if access('@catalog_product_edit') %}
        <a class="btn btn-default"
           href="{{ path('@catalog_product_edit', {"product_id": product.getId}) }}"
           title="Редактирование"><i class="fa fa-edit"></i></a>
    {% endif %}
    {% if access('@catalog_product_quantity') %}
        <a class="btn btn-default"
           href="{{ path('@catalog_product_quantity', {"product_id": product.getId}) }}" title="Количество"><i
                class="fa fa-cubes"></i></a>
    {% endif %}
    {% if access('@catalog_product_images') %}
        <a class="btn btn-default"
           href="{{ path('@catalog_product_images', {"product_id": product.getId}) }}"
           title="Управление изображениями"><i class="fa fa-image"></i></a>
    {% endif %}
    {% if access('@catalog_product_tags') %}
        <a class="btn btn-default"
           href="{{ path('@catalog_product_tags', {"product_id": product.getId}) }}" title="Теги"><i
                    class="fa fa-tags"></i></a>
    {% endif %}
    {% if access('@catalog_product_options_list') %}
        <a class="btn btn-default"
           href="{{ path('@catalog_product_options_list', {"product_id": product.getId}) }}" title="Параметры"><i
                    class="fa fa-list"></i></a>
    {% endif %}
