{% extends '@a/layout.twig' %}
{% block content %}

    <section class="content">
        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Список валют</h2>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
                <a href="{{ url('@catalog_currency_add') }}" class="btn btn-primary btn-sm mb-3">Добавить
                    валюту</a>


                <table class="table">

                    <tbody>
                    {% for currency in currencies %}
                        <tr>
                            <td> {{ currency.name }}
                                <br><small>{{ currency.code }} {{ currency.dCode ? '('~currency.dCode~')' }}</small>
                            </td>
                            <td>
                                <a href="{{ path('@catalog_currency_edit', {'id': currency.getId }) }}">редактировать</a>
                                <a href="{{ path('@catalog_currency_delete', {'id': currency.getId }) }}">удалить</a>
                            </td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </section>


{% endblock %}
