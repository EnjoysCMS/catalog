{% extends '@a/layout.twig' %}
{% block content %}

    {% do asset('js', [
        modulePath ~ '/template/assets/js/bootstrap-tagsinput/bootstrap-tagsinput.js'
    ]) %}
    {% do asset('css', [
        modulePath ~ '/template/assets/js/bootstrap-tagsinput/bootstrap-tagsinput.css'
    ]) %}

    <script>
        $('#tags').tagsinput({
            tagClass: 'badge bg-dark'
        });
    </script>
    <section class="content">


        <div class="card">
            <div class="card-header">
                <h2 class="card-title">{{ title ?? product.getName }}
                    <a class="small text-dark" href="{{ path('catalog/product', {"slug": product.getSlug}) }}"><i class="fas fa-external-link-alt"></i></a>
                    <small class="d-block">{{ subtitle }}</small>
                </h2>
                <div class="float-right">
                    {% include 'template/admin/products_admin_links.twig' %}
                </div>
            </div>

            <!-- /.card-header -->
            <div class="card-body">
                {{ form|raw }}
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>

    {% block additional %}
    {% endblock %}

{% endblock %}
