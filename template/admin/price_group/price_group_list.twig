{% extends '@a/layout.twig' %}
{% block content %}

    <section class="content">


        <div class="card">
            <div class="card-header">
                <h2 class="card-title">Группы цен
                </h2>



            </div>

            <!-- /.card-header -->
            <div class="card-body">
                <div>
                    <a class="btn btn-primary" href="{{ path('@catalog_pricegroup_add') }}">Добавить новую группу цен</a>
                </div>
                <hr>
                <table class="table table-bordered table-hover">
                {% for priceGroup in priceGroups %}
                    <tr>
                        <td>{{ priceGroup.getTitle }} <br> <small>{{ priceGroup.getCode }}</small></td>
                        <td>
                            <a class="btn btn-secondary" href="{{ path('@catalog_pricegroup_edit', {'id': priceGroup.getId}) }}">Редактировать</a>
                            <a class="btn btn-danger" href="{{ path('@catalog_pricegroup_delete', {'id': priceGroup.getId}) }}">Удалить</a>
                        </td>
                    </tr>
                {% endfor %}
                </table>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->

    </section>

    {% block additional %}
    {% endblock %}

{% endblock %}
