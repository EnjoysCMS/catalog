   <h1>{{ category.getTitle }}</h1>
            {% if category.getChildren|length %}
            <h2>Подкатегории</h2>
            <ul>
            {% for children in category.getChildren %}
                <li><a href="{{ path("catalog/category", {"slug": children.getSlug }) }}">{{ children.getTitle }}</a> </li>
            {% endfor %}
            </ul>
            {%  endif %}
            <div>
                <h2>Продукты</h2>
                <ul>
                    {% for product in products %}
                        <li><a href="{{ path("catalog/product", {"slug": product.getSlug }) }}">{{ product.getName }}</a> </li>
                    {% endfor %}
                </ul>
            </div>